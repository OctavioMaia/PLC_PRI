extends layout

block content
  .main.container.row
    .col-md-6.col-md-offset-3
      h1.display-4.m-b-2 Sign Up
      
      // register form (depois meter minlength=6 nas passwords)
      form(method='POST' action='/register')
        div.form-group
          label(for='name') Name:
          input#name.form-control(type='text', placeholder='First and last name' name='name')
        div.form-group
          label(for='email') Email:
          input#email.form-control(type='email', placeholder='example@mail.com' name='email')
        div.form-group
          label(for='age') Age:
          input#name.form-control(type='number', placeholder='Age (Minimum 16)' name='age' min="16")
        div.form-group
          label(for='pw') Password:
          input#pw.form-control(type='password' name='password')
        div.form-group
          label(for='pw2') Confirm Password:
          input#pw2.form-control(type='password' name='confirmPassword') 
        div(class='btn-group')
          a(class='btn btn-primary disabled')
            i(class='fa fa-check-square-o' style='width:24px; height:24px')
          button.btn.btn-primary(type='submit' style='width:23em;') Confirm